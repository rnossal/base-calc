{
  "name": "base-calc",
  "productName": "Base Calculator",
  "version": "1.0.0",
  "description": "Calculadora para cálculos das 4 bases principais.",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rnossal/base-calc.git"
  },
  "keywords": [
    "Calculadora",
    "Conversão",
    "Binário",
    "Octal",
    "Decimal",
    "Hexadecimal"
  ],
  "author": "Rafael Nossal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rnossal/base-calc/issues"
  },
  "homepage": "https://github.com/rnossal/base-calc#readme",
  "devDependencies": {
    "electron-builder": "latest",
    "electron-prebuilt": "latest",
    "electron-reload": "latest"
},
  "build": {
    "appId": "com.rnossal.basecalc",
    "category": "your.app.category.type",
    "win": {
      "iconUrl": "https://github.com/rnossal/base-calc/blob/master/assets/app-icon/win/icon.ico?raw=true",
      "remoteReleases": "true",
      "icon": "assets/app-icon/win/icon.ico"
    }
  }
}
